{
	"manifest_version": 2,
	"minimum_chrome_version": "22",

	"name": "Tabs SlideShow by FredZvt",
	"version": "1.0.5",
	"description": "Alternate the browser tabs like a slideshow.",
	"icons": {	
		"16": "engine/imgs/logo/logo_16.png",
		"48": "engine/imgs/logo/logo_48.png",
		"128": "engine/imgs/logo/logo.png" 
	},

	"permissions": [ "tabs", "alarms", "storage" ],

	"options_page": "options_page/page.html",

	"browser_action": {
		"default_icon": "engine/imgs/button/play.png"
	},

	"background": {
		"persistent": true,
		"page": "program.html"
	}
}